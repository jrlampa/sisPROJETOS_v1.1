# EditorConfig - Configuração de estilo de código
# https://editorconfig.org

root = true

# Padrão para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python
[*.py]
indent_size = 4
max_line_length = 119

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Arquivos de configuração
[{.env,.env.*,*.ini,*.cfg}]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
