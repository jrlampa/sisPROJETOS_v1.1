[run]
source = src
omit =
    */tests/*
    */conftest.py
    */__pycache__/*
    */venv/*
    */gui.py
    */main.py
    */report.py
    src/utils.py

# Nota: src/utils.py é código legado completamente sombreado pelo pacote
# src/utils/ (Python prioriza pacote sobre módulo). Não é importado em runtime.

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
